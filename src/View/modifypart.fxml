    <children>
      <HBox layoutX="63.0" layoutY="110.0" prefHeight="197.0" prefWidth="475.0">
         <children>
                <GridPane prefHeight="180.0" prefWidth="240.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
